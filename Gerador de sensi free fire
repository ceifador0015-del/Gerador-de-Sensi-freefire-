<script>
function gerarSensi(){

    let marca = document.getElementById("marca").value;
    let dpi = parseInt(document.getElementById("dpi").value);

    if(!dpi){
        alert("Digite uma DPI vÃ¡lida!");
        return;
    }

    let baseGeral = 100;
    let redDot = 90;
    let mira2x = 80;
    let mira4x = 70;
    let awm = 50;
    let livre = 95;

    // Ajuste baseado na DPI
    let ajuste = dpi / 400;

    // Ajuste por marca
    if(marca === "xiaomi"){ ajuste *= 1.05; }
    if(marca === "samsung"){ ajuste *= 1.00; }
    if(marca === "motorola"){ ajuste *= 0.95; }
    if(marca === "iphone"){ ajuste *= 0.90; }

    let geralFinal = Math.min(200, Math.round(baseGeral * ajuste));
    let redFinal = Math.min(200, Math.round(redDot * ajuste));
    let mira2Final = Math.min(200, Math.round(mira2x * ajuste));
    let mira4Final = Math.min(200, Math.round(mira4x * ajuste));
    let awmFinal = Math.min(200, Math.round(awm * ajuste));
    let livreFinal = Math.min(200, Math.round(livre * ajuste));

    let resultado = `
        <b>RESULTADO:</b><br><br>
        ðŸŽ¯ Geral: ${geralFinal}<br>
        ðŸ”´ Red Dot: ${redFinal}<br>
        ðŸ”­ Mira 2x: ${mira2Final}<br>
        ðŸ”Ž Mira 4x: ${mira4Final}<br>
        ðŸŽ¯ AWM: ${awmFinal}<br>
        ðŸ‘† Olhadinha Livre: ${livreFinal}
    `;

    document.getElementById("resultado").style.display = "block";
    document.getElementById("resultado").innerHTML = resultado;
}
</script>

